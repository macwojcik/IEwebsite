{% extends 'base.html.twig' %}

{% block body %}
    <h1>Advertisement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advertisement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ advertisement.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ advertisement.content }}</td>
            </tr>
            <tr>
                <th>Categoryid</th>
                <td>{{ advertisement.categoryId }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ advertisement.userId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('add_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('add_edit', { 'id': advertisement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
