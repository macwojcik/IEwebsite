{% trans_default_domain 'FOSUserBundle' %}

<form class="form-horizontal" action="{{ path("fos_user_registration_register") }}" method="post" name="fos_user_registration_form">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="fos_user_registration_form_email">Email</label>
            <div class="col-sm-9">
                <input class="form-control" id="fos_user_registration_form_email" type="email" required="required" name="fos_user_registration_form[email]">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="fos_user_registration_form_username">Login</label>
            <div class="col-sm-9">
                <input class="form-control" id="fos_user_registration_form_username" type="text" pattern=".{2,}" maxlength="255" required="required" name="fos_user_registration_form[username]">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="fos_user_registration_form_plainPassword_first">Hasło</label>
            <div class="col-sm-9">
                <input class="form-control" id="fos_user_registration_form_plainPassword_first" type="password" required="required" name="fos_user_registration_form[plainPassword][first]">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="fos_user_registration_form_plainPassword_second">Powtórz hasło</label>
            <div class="col-sm-9">
                <input class="form-control" id="fos_user_registration_form_plainPassword_second" type="password" required="required" name="fos_user_registration_form[plainPassword][second]">
            </div>
        </div>
            {{ form_row(form._token) }}
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input class="btn btn-default" type="submit" value="Zarejestruj" />
            </div>
        </div>

</form>
